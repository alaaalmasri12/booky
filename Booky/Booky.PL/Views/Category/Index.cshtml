@model IEnumerable<Category>

@{
    ViewBag.Title = "Categories";
    Layout = "_Layout";
}
<div class="container">
<div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Category" class=" btn btn-primary"><i class="bi bi-plus-circle"> Create new category</i></a>
        </div>
    </div>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-bordered border-3 border-dark ">
        <thead class="border-2">
        <tr>
            <th>Name Category</th>
            <th>Display Order</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var cat in Model.OrderBy(c=> c.DisplayOrder))
        {
            <tr>
                <td>@cat.Name</td>
                <td>@cat.DisplayOrder</td>
                <td>
                    <div class="w-25 btn-group">
                        <a class="me-3" asp-route-id="@cat.Id" asp-action="Edit"><i class="bi bi-pencil-square btn btn-primary"></i></a> 
                        <a asp-action="Delete" asp-route-id="@cat.Id"><i class="bi bi-trash3 btn btn-danger"></i></a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <table class="table table-bordered border-3 border-dark ">
        <thead class="border-2">
        <tr>
            <th>Name Category</th>
            <th>Display Order</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td colspan="2" class="text-center fw-bold">NO Found Category</td>
        </tr>
        </tbody>
    </table> 
}