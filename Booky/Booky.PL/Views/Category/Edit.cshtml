@model Category

@{
    ViewBag.Title = "Edit";
    Layout = "_Layout";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row mb-3 p-1">
            <label asp-for="Name">Name Category</label>
            <input type="text" asp-for="Name" class="form-control"/>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="row">
            <label asp-for="DisplayOrder">Display order</label>
            <input asp-for="DisplayOrder" class="form-control"/>
            <span class="text-danger" asp-validation-for="DisplayOrder"></span>
        </div>
        <div class="row d-flex  justify-content-between">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-success form-control"><i class="bi bi-pencil-square">Update</i></button>
            </div>
            <div class="col-md-3 col-6">
                <a class="btn btn-primary form-control" asp-action="Index" asp-controller="Category" >Back to list</a>
            </div>
        </div>
    </div>
</form>